doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    title Flash Cards
  body
    header
      h1 Flash Cards
    section#content
      ul
        each color in colors
          li= color
      h2= propmt
      if hint
        p
          i Hint: #{hint}
    footer
      p An app to help you study