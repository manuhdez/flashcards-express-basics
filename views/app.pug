extends layout

block main
  section.namecard
    .namecard-login
      if username
        p.namecard-greeting Welcome, #{username}!
        form.namecard-exit(action="/goodbye", method="POST")
          button(type="submit")
            img(src="/static/img/close.svg", alt="Close form")
      else
        p.namecard-greeting Hello, student!
    block intro
  block card